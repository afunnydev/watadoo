{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error", 
            {
                "arrays": "always",
                "objects": "never",
                "imports": "never",
                "exports": "never"
            }
        ],
        "no-trailing-spaces": [
            "error", 
            { "skipBlankLines": false }
        ]
    }
}